@model IEnumerable<BlogSite.Models.News>
@{
    ViewBag.Title = "Home Page";

}

<div class="jumbotron">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
       
        <div class="carousel-inner">

            @{
                int p = 1;

                foreach (var item in Model)
                {

                    if (p == 1)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://media.sproutsocial.com/uploads/2017/02/10x-featured-social-media-image-size.png" alt="First slide">
                            <div>
                                <h3>@item.Title</h3>
                                <p></p>
                                <p>@item.Description.Substring(0, 15)</p>
                            </div>
                        </div>
                       
                    }
                    else if (p > 1 && p < 3)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://media.sproutsocial.com/uploads/2017/02/10x-featured-social-media-image-size.png" alt="Second slide">
                        </div>
                    }
                    p = p + 1;

                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        height: 100%;
    }
</style>